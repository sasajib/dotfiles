# compton window compositing
exec /usr/bin/compton --config /home/sergiu/.config/compton.conf

# no title bar
new_window pixel 3

# brightness
bindsym XF86MonBrightnessUp exec sudo brightness +
bindsym XF86MonBrightnessDown exec sudo brightness -

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound

# Media player controls
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# screen lock
bindsym $mod+Ctrl+l exec lock
bindsym $mod+Ctrl+s exec nap

# screenshot
bindsym Print exec gnome-screenshot -f $HOME/img/$(date +%Y-%m-%d-%T).png
bindsym Shift+Print exec gnome-screenshot -a -f $HOME/img/$(date +%Y-%m-%d-%T).png
bindsym Alt+Print exec gnome-screenshot -w -f $HOME/img/$(date +%Y-%m-%d-%T).png

# change keyboard layout
bindsym $mod+Ctrl+e exec setxkbmap us
bindsym $mod+Ctrl+r exec setxkbmap ro std
bindsym $mod+Ctrl+d exec setxkbmap de qwerty

